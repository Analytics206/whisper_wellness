OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Model settings
MODEL_MAX_LENGTH=4096
MODEL_TEMPERATURE=0.7
MODEL_CACHE_DIR=~/.cache/huggingface/hub
