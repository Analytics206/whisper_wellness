# Application
DEBUG=True
HOST=0.0.0.0
PORT=8002

# CORS
# Comma-separated list of allowed origins, or "*" for all
# Example: CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ORIGINS=["*"]

# Database
# Using non-SSL connection for development
MONGODB_URI=mongodb://admin:ChangeMeToASecurePassword123!@mongodb:27017/whisper_wellness?authSource=admin
MONGODB_DB=whisper_wellness
QDRANT_URL=http://whisper-wellness-qdrant:6333
QDRANT_COLLECTION=whisper_wellness

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# HuggingFace
# Only needed if downloading models from Hugging Face Hub
# HUGGINGFACE_HUB_TOKEN=your_token_here
# Local model path or Hugging Face model ID
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat-hf

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Model settings
MODEL_MAX_LENGTH=4096
MODEL_TEMPERATURE=0.7
MODEL_CACHE_DIR=/app/.cache/huggingface/hub
