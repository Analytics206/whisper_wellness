# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# MongoDB Configuration
# The service will automatically detect the environment and use the correct settings
# No need to modify these values for local development
MONGODB_HOST=localhost
MONGODB_PORT=27018
MONGODB_DATABASE=whisper_wellness
MONGODB_USERNAME=admin
MONGODB_PASSWORD=ChangeMeToASecurePassword123!
MONGODB_AUTH_SOURCE=admin

# Neo4j Configuration
NEO4J_SCHEME=neo4j
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j

# Qdrant Configuration
QDRANT_URL=http://localhost:6335
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=journal_entries

# Logging
LOG_LEVEL=debug

# API Keys (if needed)
# OPENAI_API_KEY=your_openai_api_key
# HUGGINGFACE_TOKEN=your_huggingface_token
